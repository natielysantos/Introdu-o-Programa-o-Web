    html {
      font-size: 20px;
    }

    html h1 {
      font-size: 2rem; /* 2 x 20px = 40px */
    }

    h1 > .principal {
      font-size: 1.4em; /* 1.4 x 40px = 56px */
    }

    html .secundario {
      font-size: 1.4rem; /* 1.4 x 20px = 28px */
    }

    /* Estilo geral */
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
    }

    section {
      margin-bottom: 40px;
    }

    /* EXERCÍCIO 2 - CORES */
    .cores {
      display: flex;
      gap: 20px;
      margin-top: 20px;
    }

    .cor {
      width: 150px;
      height: 100px;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      border-radius: 10px;
      font-size: 14px;
      text-align: center;
    }

    .original  { background-color: rgb(219, 78, 68); }
    .clara     { background-color: rgb(224, 105, 96); }
    .escura    { background-color: rgb(186, 66, 58); }
  </style>
